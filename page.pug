html
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@tailwindcss/ui@0.7.2/dist/tailwind-ui.min.css')
  body(style='background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.2) ), url("cafe.jpg") center / cover;')
    .min-h-screen.flex.items-center.justify-center.py-12.px-4
      .max-w-md.w-full
        div
          h2.mt-6.text-center.text-3xl.leading-9.font-extrabold.text-white
            | Welcome to our Shop!
          h3.mt-6.mb-6.text-center.text-xl.leading-9.font-extrabold.text-white
            | Business Hours
          .flex.flex-col
            .py-2.overflow-x-auto(class='sm:-mx-6 sm:px-6')
              div(class='sm:rounded-lg')
                table.min-w-full
                  tbody
                    each record in records
                      tr.mt-4.bg-black.bg-opacity-75
                        td.px-6.py-4.whitespace-no-wrap.border.text-white
                          | #{record.get('Day')}
                        td.px-6.py-4.whitespace-no-wrap.border.text-white
                          | #{record.get('Hours')}